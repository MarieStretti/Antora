    "gulp-spawn-mocha": "^3.3.1",
    "istanbul": "^0.4.5",
    "map-stream": "^0.0.7",
    "mocha": "^3.5.3",
    "nodemon": "^1.12.1",
    "nyc": "^11.2.1",
    "prettier-standard": "^6.0.0",
    "snazzy": "^7.0.0",
